{{>user-nav}}
<section class="main">
  <h3>Book List</h3>
  {{#if results}}
    <table class="table table-striped table-hover">
      <thead class="thead-light">
      <th>Title</th><th>Author(s)</th><th></th><th></th>
      </thead>
      <tbody>
      {{#each results}}
        <tr>
          <!--Title will take you to the book page-->
          <td><a href="/book-user/{{this.id}}">{{this.title}}</a></td>
          <td>
            {{#each this.author}}
              {{this}}
              {{#unless @last}}, {{/unless}}
            {{/each}}
          </td>
          <td>
            <form action="/books/read-list" method="post">
            <input type="hidden" id="id" name="id" value="{{this.id}}">
            <input type="submit" value="Read">
          </form>

          </td>
          <td>
            <form action="/books/want-to-read-list" method="post">
            <input type="hidden" id="id" name="id" value="{{this.id}}">
            <input type="submit" value="Want to Read">
          </form>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  {{else}}
    <h4>Nothing found!</h4>
  {{/if}}
</section>