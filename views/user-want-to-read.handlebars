{{> user-nav}}
<section class="main">
<h3>Want-to-read List</h3>

<table class="table table-striped table-hover">
  <th>Title</th><th>Author(s)</th><th></th>
  {{#each results}}
    <tr>
      <!--Title will take you to the book page-->
      <td><a href="/book-user/{{this.id}}">{{this.title}}</a></td>
      <td>
        {{#each this.author}}
          {{this}}
          {{#unless @last}}, {{/unless}}
        {{/each}}
      </td>
      <td><form
          action="/books/remove-want-to-read-list"
          method="post"
          class="remove-button"
        >
          <input type="hidden" id="id" name="id" value="{{this.id}}" />
          <input type="submit" id="remove" name="remove" value="Remove" />
        </form></td>
    </tr>
  {{/each}}
</table>
</section>