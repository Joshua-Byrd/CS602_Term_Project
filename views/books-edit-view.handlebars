<form method="post" action="/books/edit" class="form">

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{data.title}}" /><br />

  <label for="author">Author:</label>
  <input type="text" id="author" name="author" value="{{data.author}}" /><br />

  <label for="description">Description:</label><br />
  <textarea
    id="description"
    name="description"
    rows="6"
    cols="60"
  >{{data.description}}</textarea><br />

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="{{data.genre}}" /><br />

  <label for="isbn13">ISBN-13:</label>
  <input type="text" id="isbn13" name="isbn13" value="{{data.isbn13}}" /><br />

  <label for="isbn10">ISBN-10:</label>
  <input type="text" id="isbn10" name="isbn10" value="{{data.isbn10}}" /><br />

  <label for="releaseYear">Release Year:</label>
  <input
    type="text"
    id="releaseYear"
    name="releaseYear"
    value="{{data.releaseYear}}"
  /><br />
  <input type="hidden" id="id" name="id" value="{{data.id}}" />
  <input type="submit" />
</form>
<p><a href="/books-admin">Go back</a></p>